<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/addShortcut_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addShortcut"
        android:text="Add Shortcut" />

    <Button
        android:id="@+id/removeShortcut_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="removeShortcut"
        android:text="Remove Shortcut" />

    <Button
        android:id="@+id/disableShortcut_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="disableShortcut"
        android:text="Disable Shortcut" />

</LinearLayout>
